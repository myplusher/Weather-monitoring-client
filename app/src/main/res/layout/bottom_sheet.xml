<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">
    <TextView
            android:id="@+id/bottom_sheet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textSize="25dp" />

    <Button
            android:id="@+id/btn_history"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:drawableLeft="@drawable/timeline_24px"
            android:textColor="@color/cardview_dark_background"
            android:text="История изменений" />
    <Button
            android:id="@+id/btn_microcontroller"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:drawableLeft="@drawable/ic_dashboard_black_24dp"
            android:textColor="@color/cardview_dark_background"
            android:text="Микроконтроллеры" />
    <Button
            android:id="@+id/btn_mechanism"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:drawableLeft="@drawable/room_preferences_24px"
            android:textColor="@color/cardview_dark_background"
            android:text="Механизмы" />
</LinearLayout>